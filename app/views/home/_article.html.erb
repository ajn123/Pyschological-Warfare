<div class="ui item">
    <%= link_to(image_tag("#{article.header_image}",  class: "ui centered big segment article_image rounded image"), show_page_path(article)) %>

    <div class="ui center aligned text container">
      <h1 class="ui header ">
        <%= article.title %>
      </h1>

      <div class="sub header">
        <a class="ui blue label">
          <%= article.published_date %>
        </a>
      </div>
    </div>

    <% if article.media == "podcast" || article.media.nil? %>
      <div class="ui segment">
        <% if article.embedded_link != "" %>
          <iframe width="100%" height="166" scrolling="no" frameborder="no" src="<%= article.embedded_link %>&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
        <% end %>
      </div>
    <% end %>

  <div class="ui float right content">

    <h1 class="ui header left aligned">
    </h1>


      
    <%= read_more?(article, @read_more) %>


  </div>

</div>


 <% if article.useful_links.count > 0 %>
     <div class="ui horizontal divider">
        Useful links
     </div>

     <ul class="">
       <% article.useful_links.each do |key, value| %>
        <li>
           <%= link_to "#{key}", value, target: :blank, class: "ui teal tag label" %>
        </li>
      <% end %>
    </ul>
<% end %>

      <% article.timestamp.each do |item| %>
          <%= item %>
      <% end %>

 <% if article.people_mentioned.count > 0 %>
      <div class="ui horizontal divider">
          People Mentioned
      </div>
      <ul class="">
        <% article.people_mentioned.each do |key, value| %>
          <li>
            <%= link_to "#{key}", value, target: :blank, class: "ui blue tag label" %>
          </li>
        <% end %>
      </ul>
  <% end %>
